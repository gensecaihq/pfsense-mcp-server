{
  "mcpServers": {
    "pfsense": {
      "command": "python",
      "args": ["/path/to/pfsense-mcp-server/main.py"],
      "env": {
        "MCP_MODE": "stdio",
        "PFSENSE_URL": "https://your-pfsense.local",
        "PFSENSE_CONNECTION_METHOD": "rest",
        "PFSENSE_API_KEY": "your-api-key",
        "PFSENSE_API_SECRET": "your-api-secret",
        "DEFAULT_ACCESS_LEVEL": "READ_ONLY",
        "LOG_LEVEL": "INFO"
      }
    }
  }
}
